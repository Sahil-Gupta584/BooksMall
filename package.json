{
  "name": "booksmall",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start:ws-server": "turbo run start --filter=ws-server",
    "build:ws-server": "turbo run build --filter=ws-server",
    "build:backend": "turbo run build --filter=backend",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
